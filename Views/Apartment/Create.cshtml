@model WebApplication4.Models.Apartment

<div class="container">
    <h3>Создание квартиры</h3>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="BuildingId">BuildingId</label>
            <input asp-for="BuildingId" class="form-control" required />
            <span asp-validation-for="BuildingId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rooms">Rooms</label>
            <input asp-for="Rooms" class="form-control" required />
            <span asp-validation-for="Rooms" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Floor">Floor</label>
            <input asp-for="Floor" class="form-control" />
            <span asp-validation-for="Floor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Area">Area</label>
            <input asp-for="Area" class="form-control"/>
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status">Status</label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group mb-3 mt-3">
            <label>Загрузить фотографию:</label>
            <input type="file" name="layout" class="form-control-file" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отменить</a>
    </form>
</div>