@{
    ViewData["Title"] = "ЖК";
}

@model WebApplication4.Models.ConstructionProject

<div class="container">
    <h1>Create ЖК</h1>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name">Название</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="District">Район</label>
            <input asp-for="District" class="form-control" />
            <span asp-validation-for="District" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Infrastructure">Инфраструктура</label>
            <input asp-for="Infrastructure" class="form-control" />
            <span asp-validation-for="Infrastructure" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Отменить</a>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}