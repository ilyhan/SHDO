@{
    ViewData["Title"] = "ЖК";
}

@model WebApplication4.Models.ConstructionProject

<div class="container">
    <form asp-action="Edit">
        <h1>Изменение типа самолета</h1>

        <div class="form-group">
            <label asp-for="Name">Название ЖК</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="District">Район</label>
            <input asp-for="District" class="form-control" />
            <span asp-validation-for="District" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Infrastructure">Инфраструктура</label>
            <input asp-for="Infrastructure" class="form-control" />
            <span asp-validation-for="Infrastructure" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="ProjectId" />
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отменить</a>
    </form>
</div>